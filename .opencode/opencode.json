{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "description": "Primary development agent with full codebase access",
      "model": "opencode/big-pickle"
    },
    "compaction": {
      "description": "Session summarizer for context continuity across compactions",
      "model": "opencode/big-pickle"
    },
    "explore": {
      "description": "Fast codebase search specialist",
      "model": "opencode/grok-code"
    },
    "general": {
      "description": "General-purpose subagent for fast, well-defined tasks; delegates complexity quickly",
      "model": "opencode/grok-code"
    },
    "looker": {
      "description": "Media extraction specialist for images, PDFs, diagrams",
      "model": "opencode/gpt-5-nano"
    },
    "plan": {
      "description": "Primary planning agent for architecture and multi-phase execution",
      "model": "opencode/big-pickle"
    },
    "review": {
      "description": "Code review, debugging, and security audit specialist",
      "model": "opencode/big-pickle"
    },
    "scout": {
      "description": "External research specialist for library docs and patterns",
      "model": "opencode/big-pickle"
    },
    "vision": {
      "description": "Visual content specialist for multimodal analysis and UI/UX guidance",
      "model": "opencode/gpt-5-nano"
    },
    "painter": {
      "description": "Image generation and editing specialist using Gemini 3 Pro Image. Use for creating UI mockups, app icons, hero images, visual assets, and editing/redacting existing images",
      "model": "opencode/gpt-5-nano"
    }
  },
  "autoupdate": false,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "experimental": {},
  "formatter": {
    "biome": {
      "command": [
        "npx",
        "@biomejs/biome",
        "check",
        "--write",
        "$FILE"
      ],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".json",
        ".jsonc"
      ]
    },
    "cargo-fmt": {
      "command": [
        "cargo",
        "fmt",
        "--",
        "$FILE"
      ],
      "extensions": [
        ".rs"
      ]
    },
    "java-formatter": {
      "command": [
        "google-java-format",
        "--replace",
        "$FILE"
      ],
      "environment": {
        "JAVA_HOME": "{env:JAVA_HOME}"
      },
      "extensions": [
        ".java"
      ]
    },
    "oxfmt": {
      "command": [
        "npx",
        "oxfmt",
        "--write",
        "$FILE"
      ],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".json",
        ".jsonc",
        ".html",
        ".css",
        ".scss",
        ".sass",
        ".md",
        ".mdx",
        ".yaml",
        ".yml"
      ]
    },
    "laravel-pint": {
      "command": [
        "npx",
        "laravel-pint",
        "--preset",
        "psr12",
        "$FILE"
      ],
      "extensions": [
        ".php"
      ]
    }
  },
  "instructions": [
    ".opencode/memory/user.md",
    ".opencode/memory/project/*.md"
  ],
  "keybinds": {
    "command_list": ";",
    "leader": "`",
    "session_child_cycle": "ctrl+alt+right",
    "session_child_cycle_reverse": "ctrl+alt+left",
    "session_compact": "ctrl+k"
  },
  "mcp": {
    "context7": {
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true,
      "type": "local"
    },
    "gh_grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "stitch": {
      "enabled": false,
      "type": "remote",
      "url": "https://stitch.googleapis.com/mcp",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:STITCH_ACCESS_TOKEN}",
        "X-Goog-User-Project": "{env:GOOGLE_CLOUD_PROJECT}"
      }
    }
  },
  "model": "opencode/big-pickle",
  "permission": {
    "bash": {
      "*": "allow",
      "cat *": "allow",
      "git branch *": "allow",
      "git commit *": "ask",
      "git diff *": "allow",
      "git log *": "allow",
      "git push *": "ask",
      "git rebase *": "ask",
      "git reset *": "ask",
      "git status *": "allow",
      "ls *": "allow",
      "npm *": "allow",
      "npx *": "allow",
      "rm *": "deny",
      "rm -rf *": "deny",
      "sudo *": "deny"
    },
    "doom_loop": "ask",
    "edit": "allow",
    "external_directory": "ask",
    "question": "allow",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  },
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@franlol/opencode-md-table-formatter@0.0.3"
  ],
