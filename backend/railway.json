{
    "$schema": "https://railway.app/get-started/config-reference.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "uvicorn backend.server:app --host 0.0.0.0 --port ${PORT}",
        "healthcheckPath": "/api/",
        "healthcheckTimeout": 100
    }
}